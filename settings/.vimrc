syntax on
colorscheme atom-dark

set guifont=SFMono\ Nerd\ Font:h16

set number

set incsearch
set nohlsearch

set background=dark

" Hide the mouse pointer while typing
set mousehide

" Expand all tabs to spaces
set expandtab

" Show the line and column number of the cursor position on the status line
set ruler

" Show INSERT in the status line while in insert mode
set showmode

