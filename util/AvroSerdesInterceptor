package test;

import org.apache.avro.AvroRuntimeException;
import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;
import org.springframework.stereotype.Component;

@Aspect
@Component
public class AvroSerdesInterceptor {

    @Around("execution(* package.of.target.class.ClassName.targetMethod(..))")
    public Object interceptSerdes(ProceedingJoinPoint joinPoint) {
        throw new AvroRuntimeException("Force failure");
    }

}
